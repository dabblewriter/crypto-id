{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": [
      "es2021"
    ],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"]
}
